{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block body %}
    <h1>Les etats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.id }}</td>
                <td>{{ etat.libelle }}</td>
                <td>
                    <a href="{{ path('app_etat_show', {'id': etat.id}) }}">Afficher</a>
                    <a href="{{ path('app_etat_edit', {'id': etat.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucun etat existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etat_new') }}">Cr√©er un etat</a>
{% endblock %}
